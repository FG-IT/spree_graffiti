<% case type %>
<% when "not-available-in-currency" %>
  <span class="add-to-cart-form-general-availability-value a-size-medium add-to-cart-form-general-availability-value--danger"><%= Spree.t(:product_not_available_in_this_currency) %></span>
<% when "in-stock" %>
  <span class="add-to-cart-form-general-availability-value "><span class="text-success a-size-medium"> <%= Spree.t(:in_stock) %></span> </span>
<% when "backorderable" %>
  <span class="add-to-cart-form-general-availability-value a-size-medium add-to-cart-form-general-availability-value--warning"><%= Spree.t(:backordered_info) %></span>
<% when "out-of-stock" %>
  <span class="add-to-cart-form-general-availability-value a-size-medium add-to-cart-form-general-availability-value--danger"><%= Spree.t(:out_of_stock) %></span>
<% end %>
